<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>com.longder.bookstore.web.InitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>init</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>toBuy</servlet-name>
        <servlet-class>com.longder.bookstore.web.BuyFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toBuy</servlet-name>
        <url-pattern>/toBuy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>com.longder.bookstore.web.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showCart</servlet-name>
        <servlet-class>com.longder.bookstore.web.ShowCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showCart</servlet-name>
        <url-pattern>/showCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>remove</servlet-name>
        <servlet-class>com.longder.bookstore.web.RemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remove</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.longder.bookstore.web.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.longder.bookstore.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.longder.bookstore.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listBook</servlet-name>
        <servlet-class>com.longder.bookstore.web.BookListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listBook</servlet-name>
        <url-pattern>/listBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addBook</servlet-name>
        <servlet-class>com.longder.bookstore.web.BookAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBook</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>toUpdateBook</servlet-name>
        <servlet-class>com.longder.bookstore.web.ToUpdateBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toUpdateBook</servlet-name>
        <url-pattern>/toUpdateBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateBook</servlet-name>
        <servlet-class>com.longder.bookstore.web.BookUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateBook</servlet-name>
        <url-pattern>/updateBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteBook</servlet-name>
        <servlet-class>com.longder.bookstore.web.BookDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteBook</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>
</web-app>